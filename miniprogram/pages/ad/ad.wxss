/* miniprogram/pages/ad/ad.wxss */

page {
  height: 100%;
  width: 100%;
}

.ad {
  height: 100%;
  width: 100%;
  display: flex;
  justify-content: center;
}

.slide-image {
  position: fixed;
  top: 0;
  right: 0;
  width: 100%;
  height: 100%;
}

.shouquan {
  position: fixed;
  bottom: 100px;
  width: 100px;
  height: 30px;
  line-height: 30px;
  font-size: 14px;
  border-radius: 10px;
  color: #333;
  opacity: 0.8;
}

.next {
  position: absolute;
  bottom: 50px;
  right: 20px;
  width: 50px;
  background-color: #aea2a4;
  border-radius: 50%;
  color: #fff;
  line-height: 50px;
  height: 50px;
  font-size: 16px;
  text-align: center;
  opacity: 0.8;
}
